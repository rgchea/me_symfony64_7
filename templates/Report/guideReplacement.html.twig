{% extends "base.html.twig" %}

{% block breadcrumb %}
    {{ parent() }}
    <li> <a href="{{ path('backend_admin_claim_index') }}">Guías con reposición Autorizada</a> </li>
    {% endblock %}

{% block title %}
    Reposición de Guías
{% endblock %}




{% block myContent %}
{{ parent() }}

<div class="row">
    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">

    </div>
</div>

<div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
    <header>
        <h2>Guías con reposición Autorizada</h2>
    </header>

    <!-- widget div-->
    <div>

        <!-- widget edit box -->
        <div class="jarviswidget-editbox">
            <!-- This area used as dropdown edit box -->

        </div>
        <!-- end widget edit box -->

        <!-- widget content -->
        <div class="widget-body no-padding">
            <div class="widget-body-toolbar">

            </div>

            <table id="dt_basic" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                    	<th>Guía</th>
                    	<th>Status</th>
                        <th>Reposición</th>
                        <th>Compra de Producto</th>
                        <th>Monto Compra de Producto</th>
                        <th>Observaciones</th>
                        <th width="150">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.code }}</td>
                        <td>{{ entity.claim.status }}</td>
                        <td>{{ entity.claim.replacement == 1 ? 'Si' : 'No' }}</td>
                        <td>{{ entity.claim.productPurchase == 1 ? 'Si' : 'No' }}</td>
                        <td>{{ entity.claim.productPurchaseAmount|number_format(2, '.', '') }}</td>
                        <td>{{ entity.claim.observation }}</td>
                        
                        <td>
                        	<a href="{{ path('guide_replacement_new', {'id': entity.id }) }}">
								<div class="btn btn-sm btn-primary">
									<span class="fa fa-search"></span>
								</div>
                        	</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>


        </div>
        <!-- end widget content -->

        

    </div>
    <!-- end widget div -->
    
</div>
    <script type="text/javascript">

        $(document).ready(function(){

            $('#dt_basic').DataTable({

                "aaSorting": [[ 0, "asc" ]],
            });

        });


    </script>

{% endblock %}
